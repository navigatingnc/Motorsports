# =============================================================================
# Motorsports Management — Root Environment Variables
# Copy this file to .env and fill in all values before running docker compose.
# NEVER commit .env to version control.
# =============================================================================

# ---------------------------------------------------------------------------
# PostgreSQL
# ---------------------------------------------------------------------------
POSTGRES_USER=motorsports
POSTGRES_PASSWORD=change_me_in_production
POSTGRES_DB=motorsports_db

# ---------------------------------------------------------------------------
# Backend
# ---------------------------------------------------------------------------
# JWT secret — use a long, random string (e.g. openssl rand -hex 64)
JWT_SECRET=change_me_in_production
JWT_EXPIRES_IN=7d

# CORS — set to the public URL of your frontend (e.g. https://app.example.com)
CORS_ORIGIN=http://localhost

# ---------------------------------------------------------------------------
# Frontend build
# ---------------------------------------------------------------------------
# The URL the browser uses to reach the backend API.
# In a typical single-host deployment this is the same host on port 3000,
# or a reverse-proxy path such as https://app.example.com/api.
VITE_API_BASE_URL=/

# Port to expose the frontend nginx container on the host (default: 80)
FRONTEND_PORT=80

# ---------------------------------------------------------------------------
# S3 / Object Storage (optional — leave blank to disable uploads)
# ---------------------------------------------------------------------------
S3_ENDPOINT=
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=motorsports-uploads
S3_PUBLIC_BASE_URL=
PRESIGNED_URL_EXPIRES_IN=3600
