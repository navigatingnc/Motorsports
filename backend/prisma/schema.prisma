generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Vehicle {
  id          String   @id @default(uuid())
  make        String
  model       String
  year        Int
  category    String   // e.g., "Formula", "GT", "Rally", etc.
  number      String?  // Racing number
  vin         String?  @unique // Vehicle Identification Number
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  setupSheets SetupSheet[]
  lapTimes    LapTime[]
  parts       Part[]

  @@map("vehicles")
}

model Part {
  id          String   @id @default(uuid())
  name        String
  partNumber  String?  // Manufacturer or internal part number
  category    String   // e.g., "Engine", "Suspension", "Brakes", "Tyres", "Bodywork", "Electronics", "Other"
  quantity    Int      @default(0)
  unit        String   @default("pcs") // e.g., "pcs", "sets", "liters", "kg"
  cost        Float?   // Cost per unit in USD
  supplier    String?
  location    String?  // Storage location / bin number
  lowStockThreshold Int @default(2) // Alert when quantity falls at or below this
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Optional relation to a specific vehicle
  vehicleId   String?
  vehicle     Vehicle? @relation(fields: [vehicleId], references: [id], onDelete: SetNull)

  @@map("parts")
}

model Event {
  id          String    @id @default(uuid())
  name        String
  type        String    // e.g., "Race", "Qualifying", "Practice", "Test Day"
  venue       String
  location    String
  startDate   DateTime
  endDate     DateTime
  status      String    @default("Upcoming") // "Upcoming", "In Progress", "Completed", "Cancelled"
  description String?   @db.Text
  notes       String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  setupSheets SetupSheet[]
  lapTimes    LapTime[]

  @@map("events")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         String   @default("user") // "admin", "user", "viewer"
  firstName    String
  lastName     String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  driver       Driver?
  setupSheets  SetupSheet[]

  @@map("users")
}

model Driver {
  id             String   @id @default(uuid())
  userId         String   @unique
  licenseNumber  String?  @unique
  nationality    String?
  dateOfBirth    DateTime?
  bio            String?  @db.Text
  emergencyContact String?
  medicalNotes   String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  lapTimes       LapTime[]

  @@map("drivers")
}

model SetupSheet {
  id          String   @id @default(uuid())

  // Relations
  vehicleId   String
  eventId     String
  createdById String

  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [createdById], references: [id])

  // Session context
  sessionType String   // e.g., "Practice", "Qualifying", "Race", "Test"
  sessionNumber Int?   // e.g., 1, 2, 3 for multiple practice sessions

  // Tyre setup
  tyreFrontLeft   String?
  tyreFrontRight  String?
  tyreRearLeft    String?
  tyreRearRight   String?
  tyrePressureFrontLeft  Float?  // PSI
  tyrePressureFrontRight Float?  // PSI
  tyrePressureRearLeft   Float?  // PSI
  tyrePressureRearRight  Float?  // PSI

  // Suspension setup
  rideHeightFront Float?  // mm
  rideHeightRear  Float?  // mm
  springRateFront Float?  // N/mm
  springRateRear  Float?  // N/mm
  damperFront     String?
  damperRear      String?
  camberFront     Float?  // degrees
  camberRear      Float?  // degrees
  toeInFront      Float?  // mm or degrees
  toeInRear       Float?  // mm or degrees

  // Aerodynamics
  frontWingAngle  Float?  // degrees
  rearWingAngle   Float?  // degrees
  downforceLevel  String? // e.g., "Low", "Medium", "High"

  // Brakes
  brakeBias       Float?  // percentage front
  brakeCompound   String?

  // Engine / Drivetrain
  engineMap       String?
  differentialEntry Float? // percentage
  differentialMid   Float? // percentage
  differentialExit  Float? // percentage

  // Fuel
  fuelLoad        Float?  // litres or kg

  // Notes & observations
  notes           String? @db.Text
  driverFeedback  String? @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("setup_sheets")
}

model LapTime {
  id          String   @id @default(uuid())

  // Relations
  driverId    String
  vehicleId   String
  eventId     String

  driver      Driver   @relation(fields: [driverId], references: [id], onDelete: Cascade)
  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  // Lap data
  lapNumber   Int                        // Lap number within the session
  lapTimeMs   Int                        // Lap time in milliseconds for precision
  sessionType String                     // "Practice", "Qualifying", "Race", "Test"
  sector1Ms   Int?                       // Sector 1 time in milliseconds
  sector2Ms   Int?                       // Sector 2 time in milliseconds
  sector3Ms   Int?                       // Sector 3 time in milliseconds
  isValid     Boolean  @default(true)    // Whether the lap was valid (no penalties/incidents)
  notes       String?  @db.Text

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("lap_times")
}
