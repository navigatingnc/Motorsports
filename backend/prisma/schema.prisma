generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Vehicle {
  id          String   @id @default(uuid())
  make        String
  model       String
  year        Int
  category    String   // e.g., "Formula", "GT", "Rally", etc.
  number      String?  // Racing number
  vin         String?  @unique // Vehicle Identification Number
  notes       String?  @db.Text
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  setupSheets SetupSheet[]

  @@map("vehicles")
}

model Event {
  id          String    @id @default(uuid())
  name        String
  type        String    // e.g., "Race", "Qualifying", "Practice", "Test Day"
  venue       String
  location    String
  startDate   DateTime
  endDate     DateTime
  status      String    @default("Upcoming") // "Upcoming", "In Progress", "Completed", "Cancelled"
  description String?   @db.Text
  notes       String?   @db.Text
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  setupSheets SetupSheet[]

  @@map("events")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String
  role         String   @default("user") // "admin", "user", "viewer"
  firstName    String
  lastName     String
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  driver       Driver?
  setupSheets  SetupSheet[]

  @@map("users")
}

model Driver {
  id             String   @id @default(uuid())
  userId         String   @unique
  licenseNumber  String?  @unique
  nationality    String?
  dateOfBirth    DateTime?
  bio            String?  @db.Text
  emergencyContact String?
  medicalNotes   String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("drivers")
}

model SetupSheet {
  id          String   @id @default(uuid())

  // Relations
  vehicleId   String
  eventId     String
  createdById String

  vehicle     Vehicle  @relation(fields: [vehicleId], references: [id], onDelete: Cascade)
  event       Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdBy   User     @relation(fields: [createdById], references: [id])

  // Session context
  sessionType String   // e.g., "Practice", "Qualifying", "Race", "Test"
  sessionNumber Int?   // e.g., 1, 2, 3 for multiple practice sessions

  // Tyre setup
  tyreFrontLeft   String?
  tyreFrontRight  String?
  tyreRearLeft    String?
  tyreRearRight   String?
  tyrePressureFrontLeft  Float?  // PSI
  tyrePressureFrontRight Float?  // PSI
  tyrePressureRearLeft   Float?  // PSI
  tyrePressureRearRight  Float?  // PSI

  // Suspension setup
  rideHeightFront Float?  // mm
  rideHeightRear  Float?  // mm
  springRateFront Float?  // N/mm
  springRateRear  Float?  // N/mm
  damperFront     String?
  damperRear      String?
  camberFront     Float?  // degrees
  camberRear      Float?  // degrees
  toeInFront      Float?  // mm or degrees
  toeInRear       Float?  // mm or degrees

  // Aerodynamics
  frontWingAngle  Float?  // degrees
  rearWingAngle   Float?  // degrees
  downforceLevel  String? // e.g., "Low", "Medium", "High"

  // Brakes
  brakeBias       Float?  // percentage front
  brakeCompound   String?

  // Engine / Drivetrain
  engineMap       String?
  differentialEntry Float? // percentage
  differentialMid   Float? // percentage
  differentialExit  Float? // percentage

  // Fuel
  fuelLoad        Float?  // litres or kg

  // Notes & observations
  notes           String? @db.Text
  driverFeedback  String? @db.Text

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("setup_sheets")
}
