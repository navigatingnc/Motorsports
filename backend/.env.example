# Database Configuration
DATABASE_URL="postgresql://motorsports:motorsports_dev_password@localhost:5432/motorsports_db?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# CORS â€” set to your frontend origin in production (e.g. https://app.example.com)
# Defaults to http://localhost:5173 (Vite dev server) when not set
CORS_ORIGIN=http://localhost:5173

# Authentication
JWT_SECRET="your-super-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# S3 / Object Storage Configuration
# Compatible with AWS S3, MinIO, Cloudflare R2, Backblaze B2, etc.
S3_ENDPOINT=""                          # Leave blank for AWS S3; set for S3-compatible providers
S3_REGION="us-east-1"
S3_ACCESS_KEY_ID="your-access-key-id"
S3_SECRET_ACCESS_KEY="your-secret-access-key"
S3_BUCKET_NAME="motorsports-uploads"
S3_PUBLIC_BASE_URL=""                   # Optional: CDN/public base URL for serving files
PRESIGNED_URL_EXPIRES_IN=3600           # Presigned URL expiry in seconds (default: 1 hour)
